@model ChocolateShop.ViewModels.ChocolateListViewModel

    <h1>@Model.CurrentCategory</h1>
    @foreach (var chocolate in Model.Chocolates)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div> class="thumbnail"?
                <img src="@chocolate.ImageThumbnailUrl" alt="image for chocolate shop" />
                <div class="caption">

                    <h3 class="pull-right">@chocolate.Price.ToString("c")</h3>
                    <h3>
                        @chocolate.Name
                </h3>
                    <p>@chocolate.Description</p>
                </div>

            </div>
            
            
           

        </div>
    }


